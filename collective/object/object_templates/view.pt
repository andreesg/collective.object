<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.object">
<body>

<tal:head_restrictions tal:define="collection_id python: request.get('collection_id', None);
                                   user_admin python: view.checkUserPermission()">
  <tal:allow_header tal:condition="python: collection_id != None and not user_admin">
    <tal:details metal:fill-slot="head_slot">
        <tal:definitions
          tal:define="details python: view.get_details();
                      cm_image python: details['image'];
                      cm_title python: details['title'];
                      cm_description python: details['description']">
          <tal:fb-properties omit-tag="">
                <meta property="cm:image" tal:attributes="content cm_image"/>
                <meta property="cm:title" tal:attributes="content cm_title"/>
                <meta property="cm:description" tal:attributes="content cm_description"/>
          </tal:fb-properties>
        </tal:definitions>
    </tal:details>
  </tal:allow_header>
</tal:head_restrictions>

<metal:title fill-slot="content-title">
      <metal:block define-macro="content-title">
        <tal:definitions>
            <h1 metal:use-macro="context/kss_generic_macros/macros/generic_title_view">
               Generic KSS Title. Is rendered with class="documentFirstHeading".
            </h1>
        </tal:definitions>
      </metal:block>
</metal:title>

<metal:main fill-slot="content-core" >
  <metal:content-core define-macro="content-core">
      <div class="container object-container"
        tal:define="in_museum python: view.get_in_museum();
                    record_published python: view.get_published();">

        
        <tal:block repeat="widget view/widgets/values">
            <div class="field" tal:condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description', 'priref', 'collection', 'in_museum', 'record_published')">
                <br />
                <div tal:content="structure widget/render" />
            </div>
        </tal:block>

        <p class="record-extra-info">
          <span tal:condition="not:in_museum" class="grey" i18n:translate="not_on_view">Dit object is nu niet in het museum te zien</span>
          <span tal:condition="in_museum" i18n:translate="now_on_view">Nu in het museum</span>
        <br>
          <span tal:condition="not:record_published" class="grey" i18n:translate="not_updated">De gegevens van dit object zijn niet recent gecontroleerd</span>
        </p>

        <div id="object-fields" class="object-fieldset row">
          <tal:objectdetails tal:define="fields python: view.get_fields(); fieldvalues python: fields['fields']">
              <tal:block repeat="field fieldvalues">
                <tal:definefield 
                  tal:define="fieldlabel python: field.get('label', ''); 
                              fieldvalue python: field.get('value', '')">
                  <tal:fieldlabel tal:content="structure fieldlabel"></tal:fieldlabel>
                  <tal:fieldvalue tal:content="structure fieldvalue"></tal:fieldvalue>
                </tal:definefield>
              </tal:block>
          </tal:objectdetails>
        </div>
      </div>
  </metal:content-core>
</metal:main>
</body>
</html>
